@model PortfolioWebApp.Data.Post
@{
    ViewData["Title"] = $"Post - {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var date = DateTime.Now.ToString("MMMM dd, yyyy");
    var previous = Model.Id - 1;
    var next = Model.Id + 1;
}
<div class="outer-container">
    <div class="container single-portfolio">
        <div class="row">
            <div class="col-12">
                <div class="featured-img">
                    <figure>
                        <img src="~/postImages/@Model.FirstImageUrl" alt="">
                        <img src="~/postImages/@Model.SecondImageUrl" alt="">
                        <img src="~/postImages/@Model.ThirdImageUrl" alt="">
                        <img src="~/postImages/@Model.FourthImageUrl" alt="">
                        <img src="~/postImages/@Model.FifthImageUrl" alt="">
                        <img src="~/postImages/@Model.SixthImageUrl" alt="">
                    </figure>
                </div><!-- .content-area -->
            </div><!-- .col-12 -->

            <div class="col-12 col-lg-8">
                <div class="content-area">

                    <header class="entry-header">
                        <h1>@Model.Name</h1>
                    </header><!-- .entry-header -->

                    <div class="entry-content">
                        <p>@Model.Title</p>
                    </div><!-- .entry-content -->

                    <div class="post-share flex align-items-center">
                        <label>share:</label>

                        <ul class="flex align-items-center">
                            <li class="fb"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="gp"><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li class="in"><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li class="tw"><a href="#"><i class="fa fa-twitter"></i></a></li>
                        </ul>
                    </div><!-- .post-share -->
                </div><!-- .content-area -->
            </div><!-- .col-12 -->

            <aside class="col-12 col-lg-3 offset-lg-1">
                <div class="entry-meta">
                    <div class="posted-date">
                        <label>Date</label>
                        <span class="date-format"><a href="#">@date</a></span>
                    </div><!-- .posted-date -->

                    <div class="post-category">
                        <label>Category</label>
                        <span><a href="#">@Model.Category.Name</a></span>
                    </div><!-- .post-category -->

                </div><!-- .entry-meta -->
            </aside><!-- .col-md-3 -->
        </div><!-- .row -->

        <div class="row">
            <div class="col">
                <nav class="post-nav">
                    <ul class="flex justify-content-between align-items-center">
                        <li><a asp-action="Post" asp-controller="Home" asp-route-id="@previous" asp-route-name="@Model.Name"><img src="~/publicPortfolio/images/angle-left.png" alt="Previous"></a></li>
                        <li><a href="@Url.Action("Portfolio","Home")"><img src="~/publicPortfolio/images/portfolio-icon.png" alt="Back to Portfolio"></a></li>
                        <li><a asp-action="Post" asp-controller="Home" asp-route-id="@next" asp-route-name="@Model.Name"><img src="~/publicPortfolio/images/angle-right.png" alt="Next"></a></li>

                    </ul>
                </nav><!-- .post-nav -->
            </div><!-- .col -->
        </div><!-- .row -->
    </div><!-- .container -->
</div><!-- .outer-container -->
