@model IEnumerable<PortfolioWebApp.Data.Post>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="outer-container home-page">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-3 no-padding">
                    <div class="portfolio-content">
                        <figure>
                            <img src="~/postImages/@item.FirstImageUrl" alt="@item.Category.Name">
                        </figure>

                        <div class="entry-content flex flex-column align-items-center justify-content-center">
                            <h3><a href="#">@item.Name</a></h3>

                            <ul class="flex flex-wrap justify-content-center">
                                <li><a href="#">@item.Category.Name</a></li>
                                @*<li><a href="#">Tree</a></li>*@
                            </ul>
                        </div><!-- .entry-content -->
                    </div><!-- .portfolio-content -->
                </div><!-- .col -->
            }
        </div><!-- .row -->
    </div><!-- .container-fluid -->
</div><!-- .outer-container -->
